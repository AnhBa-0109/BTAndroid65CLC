<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainlayout">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#F0BEC9"
        android:text="CÁC PHÉP TOÁN SỐ HỌC">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginEnd="20dp"
            android:text="a =">
        </TextView>
        <EditText
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:id="@+id/edit1"
            android:inputType="number">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginEnd="20dp"
            android:text="b =">
        </TextView>
        <EditText
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:id="@+id/edit2"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:gravity="center">
        <Button
            android:id="@+id/btnCong"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="HamTinhTong"
            android:backgroundTint="#D1C8EC"
            android:layout_marginEnd="20dp"
            android:textSize="40sp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="+"
            app:cornerRadius="11dp">
        </Button>
        <Button
            android:id="@+id/btnTru"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="20dp"
            android:onClick="HamTinhTru"
            android:backgroundTint="#DFF7C4"
            android:textSize="40sp"
            android:text="-"
            app:cornerRadius="11dp">
        </Button>
        <Button
            android:id="@+id/btnNhan"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#F7C2DE"
            android:textSize="40sp"
            android:textAlignment="center"
            android:onClick="HamTinhNhan"
            android:text="*"
            app:cornerRadius="11dp">
        </Button>
        <Button
            android:id="@+id/btnChia"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="#BEE0E9"
            android:textSize="30dp"
            android:onClick="HamTinhChia"
            android:text="/"
            app:cornerRadius="11dp">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Kết Quả">
        </TextView>
        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:id="@+id/tvKetqua">
        </TextView>
    </LinearLayout>
</LinearLayout>